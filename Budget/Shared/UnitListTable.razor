
<div class=" table-responsive">
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>FULLNAME</th>
                <th>SHORTNAME</th>
            </tr>
        </thead>
        <tbody>
            @* Check null while units loading *@
            @if (unitOfElements == null)
            {
                <tr>Loading data...</tr>
            }
            @* Check if collection is empty *@
            else if (unitOfElements.Count == 0)
            {
                <tr>Collection is empty!</tr>
            }
            else
            {
                @foreach (var item in unitOfElements)
                {
                    <tr>
                        <td>@item.Id </td>
                        <td>@item.FullName</td>
                        <td>@item.ShortName</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code{
    private List<UnitOfElement> unitOfElements { get; set; }

    protected async override System.Threading.Tasks.Task OnInitializedAsync()
    {
        unitOfElements = new List<UnitOfElement>()
        {
            //    new UnitOfElement.Builder().Id(Guid.NewGuid()).ShortName("RUR").FullName("Ruble").Build(),
            //    new UnitOfElement.Builder().Id(Guid.NewGuid()).ShortName("EUR").FullName("Euro").Build(),
            //    new UnitOfElement.Builder().Id(Guid.NewGuid()).ShortName("USD").FullName("Americab Dollar").Build()
        };

    }
}
